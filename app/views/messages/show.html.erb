<h1>Message Details</h1>

<div class="card">
    <div class="card-header">
        <%= @message.id %>
    </div>
  <div class="card-body">
    <ul>
        <li><%= @message.chat_id %></li>
        <li><%= @message.user_id %></li>
        <li><%= @message.body %></li>
        <li><%= @message.created_at %></li>
        <li><%= @message.updated_at %></li>
    </ul>
  </div>
  <%= link_to 'Back', messages_path, class: 'btn btn-danger' %>
</div>

