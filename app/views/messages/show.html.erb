<div class="container">
  <h1>Message Details</h1>
</div>
<div class="container">
  <div class="card">
    <div class="card-header">
      Message #<%= @message.id %>
    </div>
    <div class="card-body">
      <ul class="list-unstyled">
        <li><strong>Content:</strong> <%= @message.body %></li>
        <li><strong>Sent by:</strong> User #<%= @message.user.id %> (<%= @message.user.email %>)</li>
        <li><strong>Chat:</strong> #<%= @message.chat.id %> (Between User <%= @message.chat.sender_id %> and User <%= @message.chat.receiver_id %>)</li>
        <li><strong>Created at:</strong> <%= @message.created_at.strftime("%d/%m/%Y %H:%M") %></li>
      </ul>
    </div>
  </div>
</div>
<div class="container"
  <div class="mt-3">
    <% if can? :edit, @message %>
      <%= link_to 'Edit', edit_message_path(@message), class: 'btn btn-info' %>
    <% end %>
    <%= link_to 'Back', messages_path, class: 'btn btn-danger' %>
    <%= link_to 'New Message', new_message_path, class: 'btn btn-success' %>
    <% if can? :destroy, @message %>
      <%= button_to "Delete", message_path(@message), method: :delete, class: "btn btn-danger" %>
    <% end %>
  </div>
</div>