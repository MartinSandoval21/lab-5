<%= form_with(model: @chat) do |form| %>
    <% if @chat.errors.any? %>
      <div class="p-3 mb-3 bg-danger text-white rounded">
        <ul class="mb-0">
          <% @chat.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-3">
      <%= form.label :sender_id, class: "form-label" %>
      <%= form.text_field :sender_id, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= form.label :receiver_id, class: "form-label" %>
      <%= form.text_field :receiver_id, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>