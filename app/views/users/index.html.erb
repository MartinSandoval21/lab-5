<h1>List of Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Created At</th>
      <th>Uptaded At</th>
    </tr>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= user.updated_at.strftime("%Y-%m-%d") %></td>
        <td><%= link_to 'Show', "/users/#{user.id}", class: 'btn btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>